<Window x:Class="SoanDe_WPF.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoanDe_WPF"
        mc:Ignorable="d"
        Title="MessageBox" Height="200" Width="250">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button FontSize="17" Width="100" Height="25" x:Name="btnYes" Content="Yes" Click="BtnYes_Click">

            </Button>
            <Button FontSize="17" Width="100" Height="25" x:Name="btnNo" Content="No" Click="BtnNo_Click">

            </Button>
        </StackPanel>
        <StackPanel DockPanel.Dock="Top">
            <TextBlock x:Name="tbText" Text="{Binding Text}"></TextBlock>
        </StackPanel>
      
    </DockPanel>
</Window>
