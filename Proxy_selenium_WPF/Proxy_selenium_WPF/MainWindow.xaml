    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Top">
            <TextBlock Text="Enter username:" FontSize="15" Margin="1"></TextBlock>
            <TextBox x:Name="txbUsername" FontSize="25" Margin="1"></TextBox>
        </StackPanel>
